{
	"name": "aspfellow",
	"displayName": "AspFellow",
	"description": "A helper for classic ASP programming",
	"author": "ThumNet",
	"publisher": "ThumNet",
	"license": "MIT",
	"version": "0.0.4",
	"repository": {
		"type": "git",
		"url": "https://github.com/ThumNet/aspfellow"
	},
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:asp"
	],
	"main": "./client/out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "asp",
				"extensions": [
					".asp",
					".inc"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "ASP Fellow configuration",
			"properties": {
				"aspFellow.logLevel": {
					"scope": "window",
					"type": "string",
					"enum": [
						"VERBOSE",
						"INFO",
						"WARNING",
						"ERROR",
						"DEBUG",
						"NONE"
					],
					"default": "NONE",
					"description": "Controls the loglevel for the language server to the client."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm test && npm run webpack",
		"webpack": "webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "cd server && npm test",
    	"test:watch": "cd server && npm run test:watch",
		"clear-deps": "rimraf package-lock.json ./node_modules client/package-lock.json client/node_modules server/package-lock.json server/node_modules"
	},
	"devDependencies": {
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"merge-options": "^3.0.3",
		"rimraf": "^3.0.2",
		"ts-loader": "^8.0.7",
		"typescript": "^4.0.2",
		"webpack": "^5.2.0",
		"webpack-cli": "^4.1.0"
	}
}
